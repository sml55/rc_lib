setopt auto_list
unsetopt menucomplete
bindkey '^R' history-incremental-search-backward
skip_global_compinit=1

precmd()
{
git_branch=`git branch 2>/dev/null | grep -e '^*' | sed -E 's/^\* (.+)$/(\1) /'`
export git_branch=$git_branch
}
#PS1
setopt promptsubst
setopt PROMPT_SUBST
PS1='(%n@%M)--(%~)--(`date "+%d.%m.%y %H:%M"`)--$git_branch 
[%!]> '
